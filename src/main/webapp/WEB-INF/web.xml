<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <!-- Lista Serwletow-->
    <!-- Rejestracja -->
    <servlet>
        <servlet-name>Register</servlet-name>
        <servlet-class>com.aneta.logowanie.Register</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Register</servlet-name>
        <url-pattern>/Register</url-pattern>
    </servlet-mapping>
    <!-- Login -->
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>com.aneta.logowanie.Login</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>
    <!-- Logout -->
    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>com.aneta.logowanie.Logout</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/Logout</url-pattern>
    </servlet-mapping>
    <!-- Nowa aktywnosc -->
    <servlet>
        <servlet-name>NewActivity</servlet-name>
        <servlet-class>com.aneta.logowanie.NewActivity</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>NewActivity</servlet-name>
        <url-pattern>/NewActivity</url-pattern>
    </servlet-mapping>
    <!-- Usuniecie aktywnosci -->
    <servlet>
        <servlet-name>DeleteActivity</servlet-name>
        <servlet-class>com.aneta.logowanie.DeleteActivity</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteActivity</servlet-name>
        <url-pattern>/DeleteActivity</url-pattern>
    </servlet-mapping>
    <!-- Timeout-->
    <session-config>
        <session-timeout>
            10
        </session-timeout>
    </session-config>
</web-app>
